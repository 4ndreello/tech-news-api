# Server Port (optional, default: 8080)
PORT=8080

# MongoDB Atlas Configuration (Free Tier)
# Example: mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority

# Twitter/X API Credentials
# Prefer TWITTER_BEARER_TOKEN for better rate limits
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
